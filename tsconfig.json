{
  "compilerOptions": {
    "sourceMap": true,
    "jsx": "react",
    "target": "ES6",
    "allowJs": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "removeComments": true,
    "baseUrl": "src",
    "paths": {
      "@*": [
        "*"
      ],
      "@images": [
        "img"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}